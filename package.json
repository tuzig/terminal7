{
  "name": "terminal7",
  "version": "1.0-rc1",
  "description": "A touchable terminal emulator & multiplexer tablet app",
  "main": "src/index.js",
  "homepage": "https://terminal7.dev",
  "private": false,
  "build": {
    "appId": "dev.terminal7",
    "files": [
      "index.html",
      "css/*"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "dependencies": {
    "@capacitor-community/http": "^1.4.1",
    "@capacitor/android": "^3.2.5",
    "@capacitor/app": "^1.0.5",
    "@capacitor/browser": "^1.0.7",
    "@capacitor/cli": "<4",
    "@capacitor/clipboard": "^1.0.5",
    "@capacitor/core": "<4",
    "@capacitor/device": "^1.0.5",
    "@capacitor/ios": "<4",
    "@capacitor/keyboard": "^1.2.3",
    "@capacitor/network": "^1.0.5",
    "@capacitor/status-bar": "^4.0.1",
    "@capacitor/storage": "^1.2.2",
    "@robingenz/capacitor-background-task": "^1.0.0",
    "@tuzig/codemirror": "5.65.5-mods",
    "@tuzig/toml": "^3.0.0-browser",
    "@tuzig/xterm": "4.18.0-decoration",
    "capacitor-ssh-plugin": "<2",
    "glob": "<8",
    "hammerjs": "<3",
    "idb": "<7",
    "uuid": "^8.3.2",
    "xterm-addon-fit": "^0.5.0",
    "xterm-addon-search": "^0.7.0",
    "xterm-addon-web-links": "^0.5.1",
    "xterm-addon-webgl": "^0.11.4",
    "xterm-webfont": "^2.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.20.1",
    "@typescript-eslint/eslint-plugin": "<6",
    "@typescript-eslint/parser": "<6",
    "eslint": "<9",
    "jsdom": "^19.0.0",
    "typescript": "<5",
    "vite": "^2.8.5",
    "vite-plugin-pwa": "^0.11.13",
    "vitest": "^0.22.1",
    "yarn": "^1.22.17"
  },
  "scripts": {
    "start": "npm run dev",
    "dev": "vite",
    "stage": "vite build --sourcemap && vite preview",
    "run": "cap run ios",
    "test": "vitest",
    "build": "vite build -c vite.dev.config.js",
    "clean": "rm -rf dist ios/App/App/public/*",
    "qa": "bash ./qa/qa.bash",
    "lint": "npx eslint qa src --ext .js,.jsx,.ts,.tsx",
    "capacitor:copy:before": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuzig/terminal7.git"
  },
  "keywords": [
    "terminal",
    "tmux",
    "webrtc"
  ],
  "author": "Benny Daon",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/tuzig/terminal7/issues"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true
    },
	"globals": {
	  "db": true,
	  "terminal7": true
	},
	"ignorePatterns": ["src/imageMapResizer.js"],
	"rules": {
		"no-empty": ["error", { "allowEmptyCatch": true }],
		"no-constant-condition": ["error", { "checkLoops": false }]
	}
  }
}

